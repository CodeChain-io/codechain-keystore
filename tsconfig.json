{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
